.container {
  height: 100vw;
  padding: 30rpx 20rpx;
}
.logo {
  height: 61vw;
  position: relative;
}
.logo image {
  width: 100%;
  height: 100%;
  border-radius: 5px;
}
.logo .name {
  color: #fff;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 10rpx;
  background: rgba(36,174,70,0.20);
  font-weight: 300;
  position: absolute;
  bottom: 0;
  left: 0;
}

.message {
  margin: 30rpx 0;
  box-shadow: 0 1px 9px 0 rgba(0,0,0,0.10);
  font-size: 30rpx;
  color: #9b9b9b;
  padding: 20rpx 10rpx 60rpx;
  font-weight: 300;
}
.message > view {
    padding: 5rpx 10rpx; 
}
.message .phone {
  display: flex;
  align-items: center;
}
.message .phone view {
  margin: 10rpx 0;
}
.message .phone image {
  width: 44rpx;
  height: 46rpx;
}
.message .phone .line {
  width: 1px;
  height: 15px;
  background-color: #ccc;
  margin: 0 20rpx;
}

.item > view {
  border-bottom: 1px solid #ececec;
  padding: 25rpx;
}
.item > view:first-of-type {
  border-top: 1px solid #ececec;
}
.item > view > image {
  width: 46rpx;
  height: 46rpx;
  vertical-align: bottom;
}
.item > view > image:last-child {
  float: right;
}
.item > view > text {
  color: #333133;
  font-size: 32rpx;
  margin-left: 16rpx;
}
.label {
  display: inline-block;
  width: 100rpx;
}