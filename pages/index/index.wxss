/**index.wxss**/
.tab {
  height: 7vh;
  display: flex;
  position: relative;
}
.tab view {
  width: 50vw;
  color: #333133;
  text-align: center;
  font-size: 30rpx;
  padding: 10px 0;
  border: 4rpx solid transparent; 
  box-shadow: 0 4px 2px 0 rgba(165,165,165,0.10);
}
.tab view:first-of-type {
  position: relative;
}
.line {
  width: 2px;
  background-color: #ececec;
  height: 3vh;
  position: absolute;
  left: calc(50vw - 1px);
  top: 2vh;
}
.tab .default {
  border: 4rpx solid transparent;
}
.tab .active {
  border-bottom: 4rpx solid #2ac163;
}
.tab view:nth-child(1) image {
  width: 36rpx;
  height: 34rpx;
  vertical-align: middle;
  margin-right: 4px;
  margin-bottom: 5px; 
}
.tab view:nth-child(2) image {
  width: 24rpx;
  height: 44rpx;
  vertical-align: middle;
  margin-right: 4px;
  margin-bottom: 5px;  
}
.follow {
  position: absolute;
  right: -5px;
}
.follow image {
  width: 55px;
  height: 30px;
}
.map {
   position: relative; 
}
.message {
  width: 90vw;
  height: 20vw;
  padding-left: 35rpx;
  box-sizing: border-box;
  opacity: 0.95;
  background: #FFFFFF;
  box-shadow: 0 2px 4px 0 rgba(0,0,0,0.10);
  position: absolute;
  top: 2vh;
  left: 5vw;
  display: flex;
  align-items: center;
}
.message-avatar cover-image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}
.message-content {
  box-sizing: border-box;
  padding: 15rpx 0 15rpx 25rpx;
}
.message-content .message-name {
  font-size: 32rpx;
  color: #333133;
  padding: 6rpx 0;
}
.message-content .message-time, .message-content .message-address {
  display: flex;
  font-size: 22rpx;
  color: #a5a5a5;
  padding: 5rpx 0;
  font-weight: 200;
}
.message-content .message-time cover-view, .message-content .message-address cover-view {
  margin-top: 5rpx;
}
.message-content .message-time cover-image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.message-content .message-address cover-image {
  width: 28rpx;
  height: 33rpx;
  margin-right: 10rpx;
}
.userAvatar {
  width: 11vw;
  height: 11vw;
  background-color: #fff;
  box-sizing: border-box; 
  position: absolute;
  top: calc(100vh - 110px);
  right: 4vw;
  border-radius: 50%;
  padding: 4rpx; 
  display: flex;
  justify-content: center;
  align-items: center;
}
.userAvatar cover-image {
  width: 100%;
  height: 100%;
  border-radius: 50%; 
}
.tel {
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  display: flex;
  align-items: center;
}
.tel cover-image {
  width: 21rpx;
  height: 36rpx;
  margin-right: 50rpx;
}

.container {
  height: 100vh;
  position: relative;
}
.parclose {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  z-index: 10;
}

.model-err {
  width: 82vw;
  background-color: #fff;
  border-radius: 5px;
  padding: 20rpx 30rpx;
  text-align: center;
  position: absolute;
  top: 14vh;
  left: 9vw;
  z-index: 11;
  box-sizing: border-box;
}
.model-err .err-title {
  font-size: 34rpx;
  color: #333133;
  margin: 10rpx 0 30rpx;
}
.model-err .button {
  /* background: linear-gradient(122deg, #59B535 -50%, #3BAEA0 71%, #37ADAD 90%, #35ADB4 99%, #35ADB5 100%); */
  background-color: #24AE46;
  box-shadow: 0 1px 10px 0 rgba(53,173,181,0.47);
  border-radius: 100px;
  width: 50vw;
  font-weight: 100;
  margin-top: 70rpx;
  padding: 20rpx;
  color: #fff;
  font-size: 32rpx;
  margin: 70rpx auto 0;
}
.model-err .err-msg cover-image {
  width: 60rpx;
  height: 60rpx;
  left: 0;
  right: 0;
  margin: auto;
  margin-bottom: 45rpx;
}
.model-err .err-msg cover-view {
  font-size: 26rpx;
  color: #9b9b9b;
  font-weight: 300;
}
.model-err .button {
  margin-top: 130rpx;
}

.close {
   position: absolute;
  top: 100%;
  left: calc(41vw - 4.5vw - 3px);
  z-index: 999; 
  background-color: red;
}
.close .close-line {
  height: 16vh;
  width: 1px;
  background-color: #fff;
  margin: 0 auto;
}
.close .close-btn {
  width: 9vw;
  height: 9vw;
  border: 3px solid #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 8vw;
  font-size: 70rpx;
  color: #fff;
}