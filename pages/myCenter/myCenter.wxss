.container {
  padding: 15rpx;
}
.message {
  height: 46vw;
  border-bottom: 1px solid #ECECEC;
}
.message .bg {
  height: 80%;
  box-shadow: 0 1px 10px 0 rgba(53,173,181,0.47);
  border-radius: 100px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  text-align: center;
  color: #fff;
}
.message .bg view {
  /* border: 1px solid red; */
  width: 30vw;
}
.message .balance view:first-child, .message .discount view:first-child {
    font-size: 28rpx;
    margin-bottom: 8px;
    font-weight: 200;
    color: #4a4a4a;
}
.message .balance view:last-child, .message .discount view:last-child {
  font-size: 48rpx;
  font-weight: 200;
  color: #24AE46;
}
.message .symbol {
  font-size: 36rpx;
}
.message .message-basic view:first-child {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 8px;
  margin: auto;
}
.message .message-basic view:first-child image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 2px solid #FFFFFF;
  box-shadow: 0 1px 10px 0 rgba(0,0,0,0.10);
  box-sizing: border-box;
}
.message .message-basic view:last-child {
  font-size: 36rpx;
  color: #24AE46;
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.item > view {
  border-bottom: 1px solid #ececec;
  padding: 25rpx;
  position: relative;
}
.item > view > image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: bottom;
  margin-bottom: 8rpx;
}
.item > view > image:last-child {
  position: absolute;
  top: 38rpx;
  right: 30rpx;
  width: 14rpx;
  height: 24rpx;
}
.item > view > text {
  color: #333133;
  font-size: 34rpx;
  margin-left: 20rpx;
  font-weight: 400;
}

